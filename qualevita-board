    { date: '2024-10', traffic: 450, type: 'actual' },
    { date: '2025-02', traffic: 850, type: 'actual' },
    { date: '2025-06', traffic: 1100, type: 'actual' },
    { date: '2026-02', traffic: 1237, type: 'actual' },
    { date: '2026-05', traffic: 1450, type: 'forecast' },
    { date: '2026-08', traffic: 1720, type: 'forecast' },
