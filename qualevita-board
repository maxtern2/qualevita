    { month: 'Окт', maps: 520, search: 380 },
    { month: 'Ноя', maps: 480, search: 410 },
    { month: 'Дек', maps: 610, search: 450 },
    { month: 'Янв', maps: 720, search: 490 },
    { month: 'Фев', maps: 850, search: 540 },
